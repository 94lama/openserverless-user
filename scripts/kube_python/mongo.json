{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "mongo-pod",
    "labels": {
      "app": "webserver"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "mongo-container",
        "image": "mongo",
        "ports": [
          {
            "containerPort": 27017
          }
        ]
      }
    ]
  }
}